{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Skill(brainstorming)",
      "Skill(building-skills)",
      "Skill(condition-based-waiting)",
      "Skill(defense-in-depth)",
      "Skill(dispatching-parallel-agents)",
      "Skill(executing-plans)",
      "Skill(finishing-a-development-branch)",
      "Skill(naming)",
      "Skill(receiving-code-review)",
      "Skill(requesting-code-review)",
      "Skill(root-cause-tracing)",
      "Skill(sharing-skills)",
      "Skill(subagent-driven-development)",
      "Skill(systematic-debugging)",
      "Skill(test-driven-development)",
      "Skill(testing-anti-patterns)",
      "Skill(testing-skills-with-subagents)",
      "Skill(updating-claude-documentation)",
      "Skill(using-git-worktrees)",
      "Skill(verification-before-completion)",
      "Skill(writing-plans)",
      "Skill(frontend-design:frontend-design)"
    ]
  },
  "model": "opus",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo 'You have personal skills in ~/.claude/skills/. Some are MANDATORY (check their descriptions). Before any task, ask: \"Does a skill apply?\" Use skills proactively - even for simple tasks. They contain hard-won lessons that prevent mistakes.'"
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "INPUT=$(cat); SESSION_ID=$(echo \"$INPUT\" | jq -r '.session_id'); [[ \"$SESSION_ID\" != agent-* ]] && echo \"$INPUT\" | jq -r '.transcript_path' > /tmp/claude-transcript-$TMUX_PANE || true"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/jordan/.claude/hooks/block-git-revert.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "if [ \"$(tmux display-message -t \"$TMUX_PANE\" -p '#{window_active}')\" = \"0\" ]; then touch /tmp/claude-waiting-$TMUX_PANE; fi"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/bin/rm -f /tmp/claude-waiting-$TMUX_PANE"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/bin/rm -f /tmp/claude-waiting-$TMUX_PANE"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "if [ \"$(tmux display-message -t \"$TMUX_PANE\" -p '#{window_active}')\" = \"0\" ]; then touch /tmp/claude-waiting-$TMUX_PANE; fi"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline-command.sh"
  },
  "enabledPlugins": {
    "frontend-design@claude-code-plugins": true,
    "double-shot-latte@superpowers-marketplace": false,
    "superpowers-developing-for-claude-code@superpowers-marketplace": true,
    "superpowers-chrome@superpowers-marketplace": true,
    "elements-of-style@superpowers-marketplace": true,
    "episodic-memory@superpowers-marketplace": true,
    "code-review@claude-code-plugins": true,
    "pr-review-toolkit@claude-code-plugins": true,
    "plugin-dev@claude-code-plugins": true,
    "feature-dev@claude-code-plugins": true
  },
  "alwaysThinkingEnabled": true
}
